      "h2": {
        "fontSize": "1.5rem",
        "fontWeight": "600"
      },
      "body": {
        "fontSize": "1rem",
        "fontWeight": "400"
      }
    },
    "effects": {
      "glassmorphism": {
        "backgroundColor": "rgba(255, 255, 255, 0.25)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(255, 255, 255, 0.18)",
        "boxShadow": "0 8px 32px 0 rgba(31, 38, 135, 0.37)"
      }

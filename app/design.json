    "colors": {
      "primary": "#6B46C1",
      "secondary": "#F0EDFF",
      "background": "#F8F6FF",
      "text": "#1A202C",
      "accent": {
        "pink": "#D53F8C",
        "orange": "#ED8936",
        "blue": "#4299E1"
      }
    },
    "typography": {
